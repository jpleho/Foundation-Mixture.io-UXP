// toggle disable form elements script

(function($) {
    $.fn.toggleDisabled = function(){
        return this.each(function(){
            this.disabled = !this.disabled;
        });
    };
})(jQuery);

$("[data-disable]").on('click', function(e) {
  // e.preventDefault();
  var target = $(this).data('disable');
  $(target).toggleDisabled();
});

